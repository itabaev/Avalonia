<Styles xmlns="https://github.com/avaloniaui">
  <Style Selector="DataGridRow">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Template">
      <ControlTemplate>
        <DataGridCellsPresenter Name="PART_ContentPresenter"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"/>
      </ControlTemplate>
    </Setter>
  </Style>
  <Style Selector="DataGridRow:selected /template/ DataGridCellsPresenter">
    <Setter Property="Background" Value="#fff0f0f0"/>
  </Style>
  <Style Selector="DataGridRow:selected:focus /template/ DataGridCellsPresenter">
    <Setter Property="Background" Value="#ffd0d0d0"/>
  </Style>
</Styles>